# Base backup location
export BASE_BACKUP_DIR="/mnt/backup/base"

# WAL backup location
export WAL_BACKUP_DIR="/mnt/backup/wal"

# PostgreSQL WAL location
export PG_XLOG_DIR="/var/lib/postgresql/10/data/pg_wal"
export PG_LOG_DIR="/var/lib/postgresql/10/data/pg_log"

# Base backup pattern (set to YYYYMMDD)
export LABEL=pg_$(date +%Y%m%d)
export PGPORT=5432